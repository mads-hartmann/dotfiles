{
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "solid",
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 13,
  "editor.lineHeight": 16,
  "editor.minimap.enabled": false,
  "editor.renderLineHighlight": "none",
  "editor.renderWhitespace": "none",
  "editor.scrollBeyondLastLine": false,
  "editor.wordBasedSuggestions": true,
  // Disable vscode snippets, I use yassnippets
  "editor.tabCompletion": false,
  "editor.snippetSuggestions": "none",
  "explorer.autoReveal": false,
  "explorer.openEditors.visible": 10,
  "files.defaultLanguage": "markdown", // For scratch documents ðŸ˜Ž
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.associations": {
    "_*": "shellscript", // completion files.
    "zshrc": "shellscript",
    "zshenv": "shellscript",
    "*.env": "ini"
  },
  "files.exclude": {
    // MacOS
    "**/.DS_Store": true,
    // Git
    "**/.git": true,
    "**/.gitignore": false,
    // Editors & IDEs
    "**/.idea": true,
    "**/.vscode": false,
    // Common trash folders
    "**/.last-update": true,
    "**/.setup": true,
    "**/.build": true,
    "**/_build": true,
    "**/build": true,
    "**/tmp": true,
    "**/dist": true,
    // Node
    "**/node_modules": true,
    // OCaml / Reason
    "**/.merlin": true,
    "**/*.install": true,
    // python
    "**/.venv": true,
    "**/*.pyc": true,
    "**/*.egg-info": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    // Famly
    "**/tmp/**": true,
    "**/dist/**": true,
    "**/build/**": true
  },
  "terminal.external.osxExec": "iTerm.app",
  "window.nativeTabs": true,
  "window.titleBarStyle": "native",
  "window.zoomLevel": 0,
  "workbench.fontAliasing": "default",
  "workbench.activityBar.visible": true,
  "workbench.editor.showTabs": true,
  "workbench.editor.tabCloseButton": "off",
  "workbench.editor.enablePreview": false,
  "workbench.sideBar.location": "left",
  "workbench.statusBar.visible": true,
  "workbench.iconTheme": "eq-material-theme-icons-palenight",
  "workbench.colorTheme": "Material Theme Palenight",
  "workbench.startupEditor": "newUntitledFile",
  "yaml.schemas": {
    "kubernetes": "*.yaml"
  },
  /*
   * SCALA
   */
  "metals.serverVersion": "SNAPSHOT",
  "metals.scalafmt.version": "1.5.1",
  /**
   * Various utility plugins
   */
  "yassnippet.path": ".snippets",
  "yassnippet.mapping": {
    "shellscript": "sh-mode"
  },
  // strings are ignored.
  "spellright.spellContext": "body comments",
  "spellright.documentTypes": [
    "markdown",
    "latex",
    "plaintext",
    "typescript"
  ],
  "docker.showExplorer": false,
  "reason.formatOnSave": true,
  "editor.formatOnSave": true,
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": false,
    "editor.renderWhitespace": "boundary",
    "files.trimTrailingWhitespace": false
  },
  "markdown.preview.scrollPreviewWithEditor": false,
  "markdown.preview.scrollEditorWithPreview": false,
  "[markdown]": {
    "editor.formatOnSave": false
  },
  "[makefile]": {
    "editor.renderWhitespace": "boundary"
  },
  "prettier.eslintIntegration": true,
  "tslint.autoFixOnSave": true,
  "vsicons.presets.foldersAllDefaultIcon": true,
  "vsicons.dontShowNewVersionMessage": true,
  "vsicons.presets.hideExplorerArrows": true,
  "vsicons.presets.hideFolders": false,
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
    "suppressUpdateNotice": true,
    "suppressWelcomeNotice": true
  },
  "editor.renderControlCharacters": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true
  },
  "search.location": "panel",
  "window.restoreWindows": "none",
  "workbench.editor.labelFormat": "short",
  "workbench.editor.tabSizing": "shrink",
  "go.gopath": null,
  "telemetry.enableTelemetry": false,
  "material-icon-theme.folders.color": "#42a5f5",
  "metals.scalac.completions.enabled": true,
  "materialTheme.fixIconsRunning": false,
  "bashIde.path": "/usr/local/bin/bash-language-server",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "bashIde.highlightParsingErrors": false
}
