#!/usr/bin/env bash

set -euo pipefail

function is_git_project {
    if [ -d .git ]
    then true
    else false
    fi
}

function get_file {
  file="$1"
  if [ ! -z "$1" ]
  then echo ${file}
  else
    if is_git_project
    then
        git ls-tree -r --name-only HEAD | fzf
    else
        find . -path "*/\.*" -prune -o -type f -print -o -type l -print | sed s/^..// | fzf
    fi
  fi
}

file=$(get_file "${1: }")
${EDITOR} "${file}"
